{
    "type": "container",
    "args": {
        "margin": 5,
        "height": 70,
        "padding": 14,
        "decoration": {
            "border": {
                "style": "solid",
                "width": 1
            },
            "borderRadius": {
                "type": "all",
                "radius": 14
            }
        }
    },
    "child": {
        "type": "column",
        "args": {
            "crossAxisAlignment": "start"
        },
        "children": [
            {
                "type": "row",
                "args": {
                    "mainAxisAlignment": "start"
                },
                "children": [
                    {
                        "type": "text",
                        "args": {
                            "text": "{{firstName}}",
                            "style": {
                                "fontSize": 15,
                                "fontWeight": "bold"
                            }
                        }
                    },
                    {
                        "type": "sized_box",
                        "args": {
                            "width": 2
                        }
                    },
                    {
                        "type": "text",
                        "args": {
                            "text": "{{lastName}}",
                            "style": {
                                "fontSize": 15,
                                "fontWeight": "bold"
                            }
                        }
                    }
                ]
            },
            {
                "type": "sized_box",
                "args": {
                    "height": 5
                }
            },
            {
                "type": "text",
                "args": {
                    "text": "Tags: {{tags}}",
                    "style": {
                        "fontSize": 12,
                        "fontWeight": "w400"
                    }
                }
            }
        ]
    }
}