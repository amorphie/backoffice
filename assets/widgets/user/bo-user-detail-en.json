{
    "type": "list_view",
    "args": {
        "children": [
            {
                "type": "title_description_area_widget",
                "args": {
                    "title": "ID",
                    "text": "{{data.id}}",
                    "copyValue": true
                }
            },
            {
                "type": "title_description_area_widget",
                "args": {
                    "title": "Reference",
                    "text": "{{data.reference}}",
                    "copyValue": true
                }
            },
            {
                "type": "title_description_area_widget",
                "args": {
                    "title": "Phone Number",
                    "text": "{{data.phone.countryCode}} ({{data.phone.prefix}}) {{data.phone.number}}",
                    "copyValue": true
                }
            },
            {
                "type": "title_description_area_widget",
                "args": {
                    "title": "E-mail Address",
                    "text": "{{data.eMail}}",
                    "copyValue": true
                }
            },
            {
                "type": "title_description_area_widget",
                "args": {
                    "title": "Status",
                    "text": "{{data.state}}",
                    "copyValue": true
                }
            }
        ]
    }
