{
  "type": "neo_scaffold",
  "args": {
    "appBar": {
      "type": "neo_app_bar",
      "args": {
        "backTransitionId": "",
        "title": "Şifre Güncelleme",
        "leftWidgetType": "NeoAppBarLeftWidgetType.backButton"
      }
    },
    "body": {
      "type": "padding",
      "args": {
        "padding": {
          "start": 24,
          "end": 24
        },
        "child": {
          "type": "column",
          "args": {
            "children": [
              {
                "type": "expanded",
                "args": {
                  "flex": 999,
                  "child": {
                    "type": "single_child_scroll_view",
                    "args": {
                      "child": {
                        "type": "column",
                        "args": {
                          "crossAxisAlignment": "start",
                          "children": [
                            {
                              "type": "neo_text",
                              "args": {
                                "text": "Yeni şifre",
                                "style": {
                                  "textAlign": "start",
                                  "fontWeight": "w600",
                                  "fontSize": 16
                                },
                                "padding": {
                                  "top": 24,
                                  "bottom": 12
                                }
                              }
                            },
                            {
                              "type": "neo_text",
                              "args": {
                                "text": "Güvenliğiniz için şifrenizi güncelleyin.",
                                "style": {
                                  "textAlign": "start",
                                  "fontWeight": "w500",
                                  "color": "#FF636363",
                                  "fontSize": 14
                                },
                                "padding": {
                                  "bottom": 24
                                }
                              }
                            },
                            {
                              "type": "neo_text_form_field",
                              "args": {
                                "dataKey": "password",
                                "titleText": "Yeni Şifre",
                                "maxLength": 6,
                                "widgetEventKey": "setPasswordBulletViewChangeInput",
                                "keyboardType": "NeoKeyboardType.number",
                                "validationRegex": "^(?!$)",
                                "obscureText": true,
                                "showObscureStatusChangeButton": true,
                                "bottomText": {
                                  "type": "NeoTextFormFieldBottomTextModel",
                                  "messageType": "error",
                                  "message": "Bu alan boş bırakılamaz, lütfen doldurun.",
                                  "iconUrn": "urn:local:icons:helpCircle"
                                },
                                "padding": {
                                  "top": 24,
                                  "bottom": 20
                                }
                              }
                            },
                            {
                              "type": "neo_text_form_field",
                              "args": {
                                "dataKey": "password",
                                "titleText": "Yeni Şifre Tekrar",
                                "maxLength": 6,
                                "keyboardType": "NeoKeyboardType.number",
                                "widgetEventKey": "setPasswordBulletViewChangeInputRepeated",
                                "validationRegex": "^(?!$)",
                                "obscureText": true,
                                "showObscureStatusChangeButton": true,
                                "bottomText": {
                                  "type": "NeoTextFormFieldBottomTextModel",
                                  "messageType": "error",
                                  "message": "Bu alan boş bırakılamaz, lütfen doldurun.",
                                  "iconUrn": "urn:local:icons:helpCircle"
                                },
                                "padding": {
                                  "bottom": 24
                                }
                              }
                            },
                            {
                              "type": "neo_text",
                              "args": {
                                "text": "Yeni Şifre",
                                "style": {
                                  "textAlign": "start",
                                  "fontWeight": "w600",
                                  "fontSize": 16
                                },
                                "padding": {
                                  "bottom": 12
                                }
                              }
                            },
                            {
                              "type": "set_password_bullet_view",
                              "args": {
                                "passwordWidgetEventKey": "setPasswordBulletViewChangeInput",
                                "repeatedPasswordWidgetEventKey": "setPasswordBulletViewChangeInputRepeated"
                              }
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              },
              {
                "type": "spacer"
              },
              {
                "type": "row",
                "args": {
                  "children": [
                    {
                      "type": "expanded",
                      "args": {
                        "child": {
                          "type": "neo_button",
                          "args": {
                            "transitionId": "ob-openbanking-send-password",
                            "labelText": "Devam",
                            "displayMode": "NeoButtonDisplayMode.text",
                            "enabled": false,
                            "padding": {
                              "bottom": 40
                            }
                          }
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  }
}