{
  "type": "neo_scaffold",
  "args": {
    "appBar": {
      "type": "neo_app_bar",
      "args": {
        "backTransitionId": "",
        "title": "SMS Doğrulama",
        "leftWidgetType": "NeoAppBarLeftWidgetType.backButton"
      }
    },
    "useSafeArea": true,
    "body": {
      "type": "stack",
      "args": {
        "children": [
          {
            "type": "single_child_scroll_view",
            "args": {
              "child": {
                "type": "padding",
                "args": {
                  "padding": 24,
                  "child": {
                    "type": "column",
                    "args": {
                      "crossAxisAlignment": "stretch",
                      "children": [
                        {
                          "type": "neo_text",
                          "args": {
                            "text": "Şifre Doğrulama",
                            "style": {
                              "color": "#2d2a26",
                              "fontWeight": "w600",
                              "fontSize": 16,
                              "fontFamily": "Montserrat"
                            },
                            "padding": {
                              "bottom": "12"
                            }
                          }
                        },
                        {
                          "type": "neo_text",
                          "args": {
                            "text": "{phoneNumber} numaralı cep telefonunuza gelen doğrulama kodunu yazarak yeni şifre alma sürecine devam edin.",
                            "dataKey": "phoneNumber",
                            "style": {
                              "color": "#2d2a26",
                              "fontWeight": "w400",
                              "fontSize": 14,
                              "fontFamily": "Montserrat"
                            },
                            "padding": {
                              "bottom": 24
                            }
                          }
                        },
                        {
                          "type": "decorated_box",
                          "args": {
                            "decoration": {
                              "borderRadius": "12",
                              "color": "#f9f9f9",
                              "border": {
                                "color": "#efefef",
                                "width": "1"
                              }
                            },
                            "child": {
                              "type": "column",
                              "args": {
                                "children": [
                                  {
                                    "type": "neo_image",
                                    "args": {
                                      "imageUrn": "{securityImage}",
                                      "dataKey": "securityImage",
                                      "showGridBackground": "true",
                                      "width": "147.5",
                                      "height": "100",
                                      "borderRadius": "12",
                                      "borderWidth": "4",
                                      "borderColor": "#ffffff",
                                      "padding": {
                                        "top": "16"
                                      }
                                    }
                                  },
                                  {
                                    "type": "neo_text",
                                    "args": {
                                      "text": "Güvenlik resmini kontrol edin.",
                                      "style": {
                                        "color": "#2d2a26",
                                        "fontWeight": "w600",
                                        "fontSize": 12,
                                        "fontFamily": "Montserrat"
                                      },
                                      "padding": {
                                        "top": "8"
                                      }
                                    }
                                  },
                                  {
                                    "type": "neo_hypertext",
                                    "args": {
                                      "text": "Seçtiğiniz güvenlik resmi bu değilse lütfen iletişim merkezini arayın.",
                                      "highlightedItems": [
                                        {
                                          "itemKey": "iletişim merkezini",
                                          "text": "iletişim merkezini",
                                          "data": "hypertext_data_test"
                                        }
                                      ],
                                      "padding": {
                                        "top": "4",
                                        "bottom": "16"
                                      }
                                    }
                                  }
                                ]
                              }
                            }
                          }
                        },
                        {
                          "type": "sized_box",
                          "args": {
                            "height": "24"
                          }
                        },
                        {
                          "type": "row",
                          "args": {
                            "children": [
                              {
                                "type": "expanded",
                                "args": {
                                  "child": {
                                    "type": "sized_box",
                                    "args": {
                                      "height": "98",
                                      "child": {
                                        "type": "neo_text_form_field",
                                        "args": {
                                          "titleText": "Şifre Doğrulama Kodu",
                                          "maxLength": "6",
                                          "validationRegex": "^\\d{6}$",
                                          "obscureText": "true",
                                          "dataKey": "otpValue",
                                          "keyboardType": "NeoKeyboardType.number",
                                          "bottomText": {
                                            "type": "NeoTextFormFieldBottomTextModel",
                                            "messageType": "error",
                                            "message": "Şifreniz 6 haneli olmalıdır."
                                          },
                                          "padding": {
                                            "end": "24"
                                          }
                                        }
                                      }
                                    }
                                  }
                                }
                              },
                              {
                                "type": "neo_countdown_timer",
                                "args": {
                                  "iconUrn": "urn:local:icons:clock:svg",
                                  "duration": "180"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          {
            "type": "positioned",
            "args": {
              "child": {
                "type": "align",
                "args": {
                  "alignment": "bottomCenter",
                  "child": {
                    "type": "column",
                    "args": {
                      "crossAxisAlignment": "stretch",
                      "mainAxisSize": "min",
                      "children": [
                        {
                          "type": "neo_button",
                          "args": {
                            "transitionId": "amorphie-mobile-login-send-otp",
                            "labelText": "Devam",
                            "size": "NeoButtonSize.large",
                            "enabled": "true",
                            "displayMode": "NeoButtonDisplayMode.primary",
                            "padding": {
                              "start": "24",
                              "end": "24",
                              "top": "8",
                              "bottom": "40"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}